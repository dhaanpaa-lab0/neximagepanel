<Page x:Class="NEXImageControlPanel.Pages.SystemInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NEXImageControlPanel.Pages"
      xmlns:pageViewModels="clr-namespace:NEXImageControlPanel.PageViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance pageViewModels:SystemInfoPageViewModel}"
      Title="System Info">

    <StackPanel Orientation="Vertical" Margin="12">
        <StackPanel Orientation="Horizontal" Margin="3">
            <TextBlock FontWeight="Bold" Margin="3" TextAlignment="Right">Computer Name:</TextBlock>
            <TextBlock Margin="3" Text="{Binding Path=ComputerName}"></TextBlock>
        </StackPanel>
    </StackPanel>
</Page>
